{
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i \"s/scrypt@v[[:digit:]]\\+\\.[[:digit:]]\\+\\.[[:digit:]]\\+/scrypt@v${nextRelease.version}/g\" README.md && sed -i \"s/\\\"version\\\": \\\"[[:digit:]]\\+\\.[[:digit:]]\\+\\.[[:digit:]]\\\"/\\\"version\\\": \\\"${nextRelease.version}\\\"/ egg.json\""
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "README.md",
          "egg.json",
          "lib/_wasm/scrypt_wasm.generated.js",
          "lib/_wasm/scrypt_wasm_bg.wasm"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github",
    "@semantic-release/npm"
  ]
}
